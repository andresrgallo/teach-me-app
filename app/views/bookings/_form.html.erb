<h1>Your Booking</h1>

<h3>
  <%= @lesson.description %> $<%= @lesson.price_hr %> AUD
</h3>

Tutor: <%= @lesson.tutor.profile.first_name %>
        <%= @lesson.tutor.profile.last_name %>


<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $<%= @lesson.price_hr %> Aud</span>
    </label>
  </article>
<% end %>

