<h1>Your Booking</h1>



<h3><strong>Lesson:</strong></h3>
<h3>
  <%= @lesson.description %> $<%= @lesson.price_hr %> AUD
</h3>

<p>
  <h3><strong>Tutor:</strong></h3>
  <% if user_signed_in? %>
  <h3><%= link_to @lesson.tutor.profile.first_name, profile_path(@lesson.tutor.profile.id) %>
  <%= link_to @lesson.tutor.profile.last_name, profile_path(@lesson.tutor.profile.id) %>
  <% else %>
  <%= @lesson.tutor.profile.first_name %>
  <% end %></h3>
</p>


<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
<h3><strong>Content:</strong></h3>
     <h3><%= @lesson.details %></h3>
  </article><br>
<% end %>

