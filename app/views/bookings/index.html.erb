<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Booking Date</th>
      <th>Student Name</th>
      <th>Surname</th>
      <th>Lesson Booked</th>
      <th>Tutor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
    <% if booking.lesson.tutor.id == current_user.id %>
      <tr>
        <td><%= booking.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= booking.student.profile.first_name %></td>
        <td><%= booking.student.profile.last_name %></td>
        <td><%= booking.lesson.description %></td>
        <td><%= link_to booking.lesson.tutor.profile.first_name, profile_path(booking.lesson.tutor.profile.id) %></td>
      <% else %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

