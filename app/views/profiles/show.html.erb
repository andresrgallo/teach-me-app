<p id="notice"><%= notice %></p>

<% if @profile.user.id == current_user.id %>
<p><%= link_to 'Edit Profile', edit_profile_path(@profile) %></p>
<% end %>
<p>
<%= image_tag @profile.avatar(:thumb) %>
</p>
<% if @profile.member_id == 2 %>

<p>
  <strong>Tutor</strong>
</p>
<% else %>
  <strong>Student</strong>
<% end %>

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @profile.address %>
</p>

<p>
  <strong>State:</strong>
  <%= @profile.state %>
</p>

<p>
  <strong>Suburb:</strong>
  <%= @profile.suburb %>
</p>

<p>
  <strong>Postcode:</strong>
  <%= @profile.postcode %>
</p>

<p>
  <strong>Qualifications:</strong>
  <%= @profile.qualifications %>
</p>

<p>
  <strong>Work experience:</strong>
  <%= @profile.work_experience %>
</p>

<p>
  <strong>Facebook account:</strong>
  <%= @profile.facebook_account %>
</p>

<p>
  <strong>Twitter account:</strong>
  <%= @profile.twitter_account %>
</p>

<% if current_user.profile.member_id == 1 && current_user.id == @profile.user.id  %>
        <p><a><%= link_to 'Your Bookings', your_bookings_path %></a></p>
  <% else %>
  <% end %>

  <% if current_user.profile.member_id == 2 && current_user.id == @profile.user.id  %>
  <%= link_to 'Add Lesson', new_lesson_path %>
  <%= link_to 'View Your Lessons', your_lessons_path %>
<% end %>

<% if @profile.user.id != current_user.id %>
<% if !current_user %>
      <p></p>
        <p><a class="btn btn-primary" href="/users/sign_in" role="button">Sign in and add reviews!</a></p>
    <% else %>
        <a class="btn btn-primary" href="/profiles/<%=@profile.id%>/reviews/new" role="button">Add review for <%= @profile.first_name %></a>
    <% end %>
    <% end %>

    <% if @reviews.blank? %>
        <h3>No reviews just yet</h3>
        <% else %>
    <div class="list-group">
        <%= render @reviews %>
    </div>
    <% end %>




