<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>State</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>Qualifications</th>
      <th>Work experience</th>
      <th>Facebook account</th>
      <th>Twitter account</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.address %></td>
        <td><%= profile.state %></td>
        <td><%= profile.suburb %></td>
        <td><%= profile.postcode %></td>
        <td><%= profile.qualifications %></td>
        <td><%= profile.work_experience %></td>
        <td><%= profile.facebook_account %></td>
        <td><%= profile.twitter_account %></td>
        <td><%= profile.status %></td>
        <td class="button"><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

